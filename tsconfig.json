{
	"compilerOptions": {
    "allowJs": true,
		"composite": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
  "include": [
    "src/*.js",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
